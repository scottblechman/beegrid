{

  "manifest_version": 2,
  "name": "BeeKeeper",
  "version": "1.0",

  "description": "Adds two solution hints, the letter grid and the 2-letter list, to the NYT Spelling Bee game.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.nytimes.com/puzzles/spelling-bee"],
      "js": ["data/util.js", "data/answers.js", "data/distribution.js","data/settings.js",
            "ui/toggle.js", "ui/grid.js", "ui/list.js", "beekeeper.js"],
      "css": ["style.css"]
    }
  ]

}
